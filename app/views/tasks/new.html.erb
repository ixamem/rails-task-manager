<!-- app/views/tasks/new.html.erb -->
<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h2>Nouvelle tâche</h2>
    </div>
    <div class="card-body">
      <%= form_with model: @task, url: tasks_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, "Titre", class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :details, "Détails", class: "form-label" %>
          <%= f.text_area :details, class: "form-control", rows: 5 %>
        </div>

        <div class="form-check mb-3">
          <%= f.check_box :completed, class: "form-check-input", id: "task_completed" %>
          <%= f.label :completed, "Terminée ?", class: "form-check-label", for: "task_completed" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= f.submit "Créer la tâche", class: "btn btn-success" %>
          <%= link_to "Annuler", tasks_path, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
