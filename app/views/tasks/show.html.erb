<div class="container mt-5">
  <div class="d-flex align-items-center mb-4">
    <div class="form-check me-3">
      <%= check_box_tag "task_#{@task.id}_completed",
                        "",
                        @task.completed?,
                        disabled: true,
                        class: "form-check-input",
                        id: "task_#{@task.id}_completed" %>
    </div>

    <h1 class="<%= 'text-decoration-line-through text-muted' if @task.completed? %>">
      <%= @task.title %>
    </h1>
  </div>

  <div class="mb-4">
    <strong>Détails :</strong>
    <p><%= @task.details %></p>
  </div>

  <div class="d-flex gap-2">
    <%= link_to "← Back to list", tasks_path, class: "btn btn-outline-secondary" %>
    <%= link_to edit_task_path(@task), class: "btn btn-primary" do %>
      <i class="fas fa-edit me-1"></i>Edit
    <% end %>
    <%= link_to task_path(@task),
                method: :delete,
                data: { confirm: "Vraiment supprimer ?" },
                class: "btn btn-danger" do %>
      <i class="fas fa-trash me-1"></i>Delete
    <% end %>
  </div>
</div>
